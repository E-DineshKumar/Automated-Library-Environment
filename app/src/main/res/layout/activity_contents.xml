<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dinesh.library.ContentsActivity"
    android:background="@drawable/blue">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="88dp"
            android:id="@+id/user"
            android:src="@drawable/userrrr"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="5"/>
   <!-- <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="74dp">-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NAME"
            android:id="@+id/TVusername"
            android:layout_alignTop="@+id/user"
            android:layout_toEndOf="@+id/user"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="7dp"
            android:textColor="@android:color/white"

            android:gravity="center_vertical"
            android:layout_weight="95"
            android:typeface="normal" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:id="@+id/Btnuserprofile"
            android:layout_toEndOf="@+id/user"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="#3549ff"
            android:layout_marginRight="4dp"
            android:layout_gravity="top|right"
            android:src="@drawable/uinfo" />


    </LinearLayout>
<!--/LinearLayout-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentStart="false"

        android:layout_alignParentBottom="true"
        android:choiceMode="singleChoice"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" /></LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="RENEWAL"
        android:id="@+id/Btnrenewal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:textSize="10dp"
        android:background="@drawable/shape"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="RETURN"
        android:id="@+id/Btnreturn"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape"
        android:textColor="#ffffff"/>




</RelativeLayout>
